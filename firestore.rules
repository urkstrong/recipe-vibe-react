rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User recipes - READ by any authenticated user, WRITE only by owner
    match /artifacts/{appId}/users/{userId}/recipes/{recipeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profiles (read by all, write by owner)
    match /artifacts/{appId}/users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Following relationships
    match /artifacts/{appId}/users/{userId}/following/{followId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // User favorites - allow reading for counting
    match /artifacts/{appId}/users/{userId}/favorites/{recipeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Storage metadata
    match /artifacts/{appId}/metadata/storage {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
  
  // Allow collection group queries on favorites for counting
  match /{path=**}/favorites/{recipeId} {
    allow read: if request.auth != null;
  }
}
